<%  if	@page.page_type == "html" %>
	
	<article id="first" class="container box style1 right">
	
		<div class="inner">
			<header>
				<h2><%= @page.title %></h2>
			</header>
			<p><%= @page.body.html_safe %></p>
		</div>
	</article>

<% elsif @page.page_type == "gallery" %>
	
	<article class="container box style2">
		<header>
			<h2><%= @page.title %></h2>
		</header>
		<div class="inner gallery">
			<div class="row 0%">
				<div class="3u 12u(mobile)"><a href=<%= "#{@s3}/a.jpeg" %> class="image fit"><img src=<%= "#{@s3}/a.jpeg" %> alt="" title="סבא בצעירותו" /></a></div>
